{
  "name": "ceregrep",
  "version": "0.1.0",
  "description": "Headless agent framework with Bash, Ripgrep, and MCP support - invocable via TypeScript SDK, Python SDK, and CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ceregrep": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./sdk": {
      "import": "./dist/sdk/typescript/index.js",
      "types": "./dist/sdk/typescript/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "agent",
    "llm",
    "anthropic",
    "claude",
    "cerebras",
    "qwen",
    "bash",
    "ripgrep",
    "mcp",
    "model-context-protocol",
    "sdk",
    "context-finding",
    "code-analysis"
  ],
  "author": "Swarm-Code",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Swarm-Code/ceregrep-client.git"
  },
  "homepage": "https://github.com/Swarm-Code/ceregrep-client#readme",
  "bugs": {
    "url": "https://github.com/Swarm-Code/ceregrep-client/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.1",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "commander": "^12.0.0",
    "lodash-es": "^4.17.21",
    "openai": "^4.77.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
